{
	"compilerOptions": {
		"baseUrl": "./",
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noErrorTruncation": true,
		"outDir": "./dist",
		"paths": {
			"@/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"strict": true,
		"target": "ESNext",
		"types": ["node"]
	}
}
